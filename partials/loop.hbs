{{! Previous/next page links - only displayed on page 2+ }}
<div class="extra-pagination inner">
    {{pagination}}
</div>

{{! This is the post loop - each post will be output using this markup }}
{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post-header">
        <h2 class="post-title"><a href="{{url}}">{{{title}}}</a></h2>
        <time class="nabo-post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
    </header>
    <section class="post-excerpt">
        {{#if image}}<img class="feature-image" src="{{image}}" alt="{{image.name}}" />{{/if}}
        <p>{{excerpt words="140"}}</p>
        <p><a class="read-more" href="{{url}}">Clique para ler mais &raquo;</a></p>
    </section>
    <footer class="post-meta">
        {{#if author.image}}<img class="author-thumb" src="{{author.image}}" alt="{{author.name}}" nopin="nopin" />{{/if}}
        {{author}}
        {{tags prefix=" on "}}
    </footer>
</article>
{{/foreach}}

<aside class="right-aside">
    <h3>About Us</h3>
    <p class="mini-about">
        Lorem ipsum dolor sit amet, consectetur adipisicing elit. Quidem nulla, id explicabo amet quaerat. Ducimus ipsa, maiores ipsum, odit dicta, laudantium minima cupiditate tempore voluptate soluta non voluptates ipsam praesentium!
    </p>
</aside>
<div class="clearfix"></div>

